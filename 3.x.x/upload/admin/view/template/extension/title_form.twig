{{ header }}{{ column_left }}
<div id="content">
 <div class="page-header">
  <div class="container-fluid">
   <div class="pull-right">
    <button type="submit" form="form-title" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
    <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
   <h1>{{ heading_title }}</h1>
   <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
   </ul>
  </div>
 </div>
 <div class="container-fluid">
  {% if error_warning %}
  <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
   <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
  {% endif %}
  <div class="panel panel-default">
   <div class="panel-heading">
    <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
   </div>
   <div class="panel-body">
    <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-title" class="form-horizontal">
      <ul class="nav nav-tabs" id="language">
        {% for language in languages %}
        <li><a href="#language{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}"/> {{ language.name }}</a></li>
        {% endfor %}
       </ul>
      <div class="tab-content">
      {% for language in languages %}
      <div class="tab-pane" id="language{{ language.language_id }}">
        <div class="form-group required">
          <label class="col-sm-2 control-label">{{ entry_title }}</label>
          <div class="col-sm-10">
           <div class="input-group"> <span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
            <input type="text" name="title_description[{{ language.language_id }}][title]" value="{{ title_description[language.language_id] ? title_description[language.language_id].title : '' }}" placeholder="{{ entry_title }}" class="form-control" />
           </div>
           {% if error_title[language.language_id] %}
           <div class="text-danger">{{ error_title[language.language_id] }}</div>
           {% endif %}
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="input-meta-keyword{{ language.language_id }}">{{ entry_meta_keyword }}</label>
          <div class="col-sm-10">
           <textarea name="title_description[{{ language.language_id }}][meta_keyword]" rows="5" placeholder="{{ entry_meta_keyword }}" id="input-meta-keyword{{ language.language_id }}" class="form-control">{{ title_description[language.language_id] ? title_description[language.language_id].meta_keyword : '' }}</textarea>
          </div>
        </div>
         <div class="form-group">
          <label class="col-sm-2 control-label" for="input-meta-description{{ language.language_id }}">{{ entry_meta_description }}</label>
          <div class="col-sm-10">
           <textarea name="title_description[{{ language.language_id }}][meta_description]" rows="5" placeholder="{{ entry_meta_description }}" id="input-meta-description{{ language.language_id }}" class="form-control">{{ title_description[language.language_id] ? title_description[language.language_id].meta_description : '' }}</textarea>
          </div>
         </div>
       
       
      </div>
     
     {% endfor %}
     </div>
     <div class="form-group">
        <label class="col-sm-2 control-label" for="input-return-status">{{ entry_route }}</label>
        <div class="col-sm-10">
        <select name="route_id" id="input-route" class="form-control">
         <option value="*">{{ text_select }}</option>
         {% for route in routes %}
         {% if route.linkroute_id == route_id %}
         <option value="{{ route.linkroute_id }}" selected="selected">{{ route.name }}</option>
{% else %} 
         <option value="{{ route.linkroute_id }}">{{ route.name }}</option>
         {% endif %}
         {% endfor %}
        </select>
        </div>
      </div>
     </div>
     
      
     </div>
    </form>
   </div>
  </div>
<script type="text/javascript"><!--
$('#language a:first').tab('show');
//--></script>
{{ footer }}
</div> 
 </div>